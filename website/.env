# Application
APP_NAME=ParentShield
APP_URL=http://localhost:8000
DEBUG=false

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/parentshield

# JWT Authentication
SECRET_KEY=change-this-to-a-secure-secret-key-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID=price_your_price_id

# SMTP Email (optional - will log to console if not configured)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=ParentShield <noreply@parentshield.app>

# Admin Account (created on first startup)
ADMIN_EMAIL=admin@parentshield.app
ADMIN_INITIAL_PASSWORD=Admin123!
